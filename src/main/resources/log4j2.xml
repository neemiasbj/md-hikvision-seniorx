<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Properties>
		<Property name="application">conexx.middleware</Property>
		<Property name="log-path">log/</Property>
		<Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | PID %pid
			| %t %c{10} | %m%n</Property>
	</Properties>

	<Appenders>

		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout pattern="${pattern}" />
		</Console>

		<RollingFile name="LogToFile"
			fileName="${log-path}/${application}.log"
			filePattern="${log-path}/old/$${date:yyyy-MM}/${application}-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout>
				<Pattern>${pattern}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
		</RollingFile>

	</Appenders>

	<Loggers>

		<Logger name="br.com.thidi" level="error" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>

		<Logger name="br.com.hikvision" level="error" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>

		<Logger name="br.com.seniorx" level="error" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>

		<Logger name="org.springframework.boot" level="info"
			additivity="false">
			<AppenderRef ref="LogToConsole" />
		</Logger>

		<Logger name="org.springframework" level="info"
			additivity="false">
			<AppenderRef ref="LogToConsole" />
		</Logger>

		<Root level="info">
			<AppenderRef ref="LogToFile" />
			<AppenderRef ref="LogToConsole" />
		</Root>

		<Logger name="org.hibernate" level="OFF" additivity="false">
		</Logger>

	</Loggers>
</Configuration>
